<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/metatags.partial.ejs') %>
    <%-"<style>"%>
    <%- include('../styles/styles.css') %>
    <%- include('../styles/excelsior.css') %>
    <%- include('../styles/hljs-dark.css') %>
    <%-"</style>"%>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
</head>
<body class="wrapper">
    <%- include('../partials/header.partial.ejs') %>
    <main class="main">
            <div class="hero-section <%= data.heroimage ? 'hero-section-with-bg' : '' %>">
                <% if(data.heroimage){ %>
                <div class="hero-section__background">
                    <div class="hero-section__background-frontlight"></div>
                    <picture>
                        <img class="responsive-picture" src="<%= data.heroimage %>" alt="">
                    </picture>
                </div>
                <% } %>
                <div class="hero-section__content">
                    <div class="hero-section__header">
                        <h4 class="hero-section__category"><%= data.category %> </h4>
                        <h1 class="hero-section__title"><%= data.title %></h1>
                        <div class="hero-section__row">
                            <span class="hero-section__date">
                                Actualizado en <%= data.createdAt %>
                            </span>
                            <span class="hero-section__author">
                             Por <%= data.author %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-section">
                <div class="main-section__content">
                    <article class="main-section__article">
                        <%- data.content %> 

                        <div class="main-section__article-tags">
                            <ul>
                                <li><strong>MÃ¡s</strong></li>
                                <% for (var i = 0; i < data.tags.length ; i++) { %>
                                    <li><a href="./tag/<%= data.tags[i] %>"><%= data.tags[i] %></a></li>
                                <% } %>
                            </ul>
                        </div>
                    </article>
                    <aside class="main-section__aside">
                        
                    </aside>
                </div>
        </div>
    </main>
    <%- include('../widgets/related-posts/related-posts.widget.ejs') %>
    <%- include('../partials/footer.partial.ejs') %>
</body>
</html>